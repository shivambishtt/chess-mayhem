generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id          String   @id @default(cuid())
  player1Id   String?
  player2Id   String?
  status      String   @default("waiting")
  currentFen  String   @default("start")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  moves       Move[]
}

model Move {
  id        String   @id @default(cuid())
  gameId    String
  from      String
  to        String
  fen       String
  moveNum   Int
  createdAt DateTime @default(now())

  game      Game     @relation(fields: [gameId], references: [id], onDelete: Cascade) //foreign key
}
